      "id": "line_height",
      "min": 0.8,
      "max": 2,
      "step": 0.1,
      "label": "Line height",
      "default": 1
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "min": -5,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Letter spacing",
      "default": 0
    },
    {
      "type": "select",
