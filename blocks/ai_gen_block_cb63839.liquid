{% doc %}
  @prompt
    Large bold text filled with an image. Include a setting to control the background color., Make the ability to shrink the font for mobile, separate text alignment by mobile and desktop
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.min_height }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    overflow: hidden;
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: {{ block.settings.text_alignment }};
    max-width: 100%;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
    background: url('{{ block.settings.fill_image | image_url: width: 2000 }}') center/cover;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-image-text-fallback-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
    color: {{ block.settings.fallback_color }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    display: none;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-text-placeholder-content-{{ ai_gen_id }} {
    text-align: center;
    color: #666;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  .ai-image-text-empty-state-{{ ai_gen_id }} {
    font-size: 14px;
    color: #999;
    margin-top: 10px;
  }

  @supports not (background-clip: text) or not (-webkit-background-clip: text) {
    .ai-image-text-heading-{{ ai_gen_id }} {
      display: none;
    }
    .ai-image-text-fallback-{{ ai_gen_id }} {
      display: block;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-content-{{ ai_gen_id }} {
      text-align: {{ block.settings.mobile_text_alignment }};
    }
    
    .ai-image-text-heading-{{ ai_gen_id }},
    .ai-image-text-fallback-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
    
    .ai-image-text-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height | times: 0.7 }}px;
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-image-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.text != blank and block.settings.fill_image %}
    <div class="ai-image-text-content-{{ ai_gen_id }}">
      <h2 class="ai-image-text-heading-{{ ai_gen_id }}">{{ block.settings.text }}</h2>
      <h2 class="ai-image-text-fallback-{{ ai_gen_id }}">{{ block.settings.text }}</h2>
    </div>
  {% elsif block.settings.text != blank %}
    <div class="ai-image-text-content-{{ ai_gen_id }}">
      <h2 class="ai-image-text-fallback-{{ ai_gen_id }}" style="display: block;">{{ block.settings.text }}</h2>
    </div>
  {% else %}
    <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
      <div class="ai-image-text-placeholder-content-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-text-empty-state-{{ ai_gen_id }}">
          Add text and an image to create your image-filled text
        </div>
      </div>
    </div>
  {% endif %}
</div>

